<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de lista para el modelo GO -->
        <record id="view_go_tree" model="ir.ui.view">
            <field name="name">go.tree</field>
            <field name="model">custom_go_module.go</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sales_order_id"/>
                    <field name="manufacturing_order_id"/>
                    <field name="quantity"/>
                    <field name="deadline_date"/>
                    
                </tree>
            </field>
        </record>

        <!-- Vista de formulario para el modelo GO -->
        <record id="view_go_form" model="ir.ui.view">
            <field name="name">go.form</field>
            <field name="model">custom_go_module.go</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sales_order_id"/>
                            <field name="manufacturing_order_id"/>
                            <field name="quantity"/>
                            <field name="deadline_date"/>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para mostrar la vista de lista en el menú -->
        <record id="action_go_tree" model="ir.actions.act_window">
            <field name="name">GO</field>
            <field name="res_model">custom_go_module.go</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_go_tree"/>
            <field name="view_ids" eval="[(6, 0, [ref('view_go_form')])]"/>
            
        </record>

        <!-- Menú -->
        <menuitem id="menu_go" name="GO" parent="mrp.menu_mrp_root" sequence="20"/>
        
        <menuitem id="menu_go_list" name="Lista de GO" parent="menu_go" action="action_go_tree"/>
    </data>
</odoo>

<?xml version="1.0"?>
<odoo>
	<template id="web_signup_custom" inherit_id="auth_signup.fields">
            <xpath expr="//div[@class='form-group field-login']" position="before">
                <div class ="form-group">
                    <label for="l10n_co_document_type">Documento</label>
                	<select name="l10n_co_document_type" t-attf-class="form-control">
            			<option value="national_citizen_id">Cédula de ciudadanía</option>
            			<option value="id_card">Tarjeta de Identidad</option>
            			<option value="rut">NIT</option>
            			<option value="foreign_id_card">Cédula de Extrangeria</option>
            			<option value="passport">Pasaporte</option>
        			</select>
                    <input type="char" name="vat" t-att-value="vat" id="vat" class="form-control form-control-sm" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                </div>
            </xpath>
            <xpath expr="//div[@class='form-group field-password pt-2']" position="before">
                <div class ="form-group">
                    <label for="phone">Teléfono</label>
                	<input type="text" name="phone" t-att-value="phone" id="phone" class="form-control form-control-sm" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                    <label for="mobile">Celular</label>
                	<input type="text" name="mobile" t-att-value="mobile" id="mobile" class="form-control form-control-sm" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                    <label for="street">Dirección</label>
                	<input type="text" name="street" t-att-value="street" id="street" class="form-control form-control-sm" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                    <label for="city">Ciudad</label>
                    <input type="text" name="city" t-att-value="city" id="city" class="form-control form-control-sm" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                    <label for="departamento">Departamento</label>
                    <select name="state_id" class="form-control" required="required" t-att-readonly="'readonly' if only_passwords else None"
	                    t-att-autofocus="'autofocus' if login and not only_passwords else None">
                        <option value="">Seleccionar</option>
                        <t t-foreach="states or []" t-as="state">
                            <option t-att-value="state.id">
                                <t t-esc="state.name" />
                            </option>
                        </t>
                    </select>
                    <label for="zona">Zona o comuna</label>
                    <input type="text" name="zona" t-att-value="zona" id="zona" class="form-control form-control-sm" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                </div>
                <div class ="form-group">
                    <label for="document_type">Soy de la Universidad</label>
                	<select name="soy_universidad" t-attf-class="form-control">
            			<option value="estudiantes">Estudiantes</option>
            			<option value="docente">Docente</option>
            			<option value="administrativo">Administrativo</option>
            			<option value="egresado">Egresado</option>
            			<option value="no">No</option>
        			</select>
        			<label for="edad">Edad</label>
                	<input type="integer" name="edad" t-att-value="edad" id="edad" class="form-control form-control-sm" autofocus="autofocus"
                    autocapitalize="off" required="required" t-att-readonly="'readonly' if only_passwords else None"/>
                </div>
            </xpath>
     </template>
</odoo>

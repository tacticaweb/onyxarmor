<?xml version="1.0"?>
<odoo>
	<record id="onyx_product_template_form_view_inherite" model="ir.ui.view">
        <field name="name">onyx.product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="priority">16</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" name="toggle_sizes" type="object" icon="fa-wrench">
                    <field name="sizes_ok"  options='{"active": "Enable", "inactive": "Disable"}' widget="boolean_button"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
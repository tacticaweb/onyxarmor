<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_form_commission" model="ir.ui.view">
        <field name="name">account.move.form.commission</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_post']" position="before">
            	<button name="calculate_commissions" string="Calculate Commission" class="oe_highlight" type="object" attrs="{'invisible':['|', ('state', '!=', 'posted'), ('move_type', 'not in', ('out_invoice','out_refund'))]}"/>
            </xpath>
            <field name="to_check" position="after">
            	<field name="reference_partner" attrs="{'invisible':[('move_type', 'not in', ('out_invoice','out_refund'))]}"/>
            	<field name="commission_move_id" attrs="{'invisible':[('move_type', 'not in', ('out_invoice','out_refund'))]}"/>
            </field>
            <xpath expr="//field[@name='ref']" position="after">
            	<field name="invoice_move_id" attrs="{'invisible':[('move_type', 'not in', ('entry'))]}"/>
            </xpath>
        </field>
    </record>
</odoo>
